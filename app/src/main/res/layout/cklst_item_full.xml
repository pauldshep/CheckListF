<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Base.TextAppearance.AppCompat.Medium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check list item title"
        android:id="@+id/text_view_item_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/check_box_item"
        android:layout_toStartOf="@+id/check_box_item"
        android:layout_alignBottom="@+id/check_box_item"
        android:textStyle="bold"
        android:gravity="center_vertical"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_box_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check List Item Description"
        android:id="@+id/text_view_item_desc"
        android:layout_below="@+id/text_view_item_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/check_box_item"
        android:layout_toStartOf="@+id/check_box_item"
        android:textColor="@android:color/black"/>
</RelativeLayout>